@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<LokiPKL.Models.Product>

@{
    int CurrentPage = ViewBag.CurrentPage;
    ViewData["Title"] = "Danh sách sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .create{
        float : right
    }
</style>


<h2>Products</h2>

<p>
    <a class="btn btn-primary create" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                ProductName
            </th>
            <th>
                Price
            </th>
            <th>
                Quantity
            </th>
            <th>
                Image
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.ProductName
            </td>
            <td>
                @item.FormatPrice
            </td>
            <td>
                @item.Quantity
            </td>
            <td>
                <img style="width:100px;height:100px" src="~/Upload/Main_image/@item.MainImage" />
            </td>
            <td>
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.ProductId">Details</a>
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.ProductId">Edit</a> 
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ProductId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div aria-label="Page navigation example">
	<ul class="pagination">
		<pager class="pager-container" list="@Model" asp-action="Index" asp-controller="AdminProducts"></pager>
	</ul>
</div>