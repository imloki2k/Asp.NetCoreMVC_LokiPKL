<div id="column-left" class="col-sm-4 col-lg-3 hidden-xs">
	<div id="category-menu" class="navbar collapse in mb_40" aria-expanded="true" style="" role="button">
		<div class="nav-responsive">
			<br />
					<div class="heading-part" style="background-color:#424242;">
						<a asp-controller="Product" asp-action="Index" asp-route-id="0" >
							<h3>ALL PRODUCTS</h3>
						</a>	
					</div>
					<div><br /></div>
			@foreach (var b in ViewBag.Brands)
			{
				<div class="heading-part" style="background-color:#424242;">
					<h3>@b.BrandName</h3>
				</div>
				<ul class="nav  main-navigation collapse in">
					@foreach (var c in ViewBag.Categories)
					{
						@if (b.BrandId == c.BrandId)
						{
							<li class="category_"><a asp-controller="Product" asp-action="Index" asp-route-id="@c.CategoryId">@c.CategoryName</a></li>
						}
					}
				</ul>
			}
		</div>
	</div>
</div>